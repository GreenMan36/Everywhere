{
	"manifest_version": 2,

	"name": "IsThereAnyDeal Everywhere",
	"version": "1.0",
	"description": "Check game prices and the best deals on all pages with IsThereAnyDeal",
	
	"browser_action": {
		"default_icon": "icon_20.png",
		"default_title": "IsThereAnyDeal Everywhere"
	},
	
	"icons": {
		  "128": "icon_128.png",
		  "96": "icon_96.png",
		  "20": "icon_20.png"
		},
	
	"content_scripts": [{
		"css": [
			"styles.css"
		],
		"js": [
			"config.js",
			"content.js"
		],
		"run_at": "document_end",
		"matches": ["<all_urls>"],
		"exclude_matches": [
			"https://isthereanydeal.com/*",
			"http://localhost/*"
		]
	}],

	"permissions": [
		"tabs", "<all_urls>"
	]
}
